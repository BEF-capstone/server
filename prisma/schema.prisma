generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_HOSTED_URL")
}

// Map to the User table in postgresql
model User {
  id Int             @id @default(autoincrement())
  createdAt DateTime @default(now())
  email String       @unique
  firstname String
  lastname String
  password String
  // favorites Favorites[]
  
}

model Recipe {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  recipe_name String
  description String
  prep_time String
  difficulty String
  servings String
  instructions Json
  ingredients Json
}

